<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Quiz" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="QuestionText" FontSize="20" TextWrapping="Wrap" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Option1" Content="Option 1" Click="Option_Click" Margin="5" Width="200"/>
            <Button x:Name="Option2" Content="Option 2" Click="Option_Click" Margin="5" Width="200"/>
            <Button x:Name="Option3" Content="Option 3" Click="Option_Click" Margin="5" Width="200"/>
            <Button x:Name="Option4" Content="Option 4" Click="Option_Click" Margin="5" Width="200"/>
        </StackPanel>
        <ProgressBar x:Name="TimerBar" Height="20" VerticalAlignment="Bottom" Margin="10"/>

        <TextBlock x:Name="StatsText" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                   Margin="10,0,0,10" Text="Statisztika: Helyes: 0 | Hibás: 0" />
    </Grid>
</Window>
